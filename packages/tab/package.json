{
  "name": "@pluralsight/ps-design-system-tab",
  "version": "15.1.15",
  "description": "Design system component for tab list ui",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "author": "jaketrent",
  "keywords": [],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "build": "run-s build:js build:cjs build:css",
    "build:cjs": "babel --root-mode upward src --out-dir dist/cjs && cp src/index.d.ts dist/cjs/index.d.ts",
    "build:css": "build-css --useGlamor -i dist/cjs/css/index.js",
    "build:js": "cross-env ESM=true babel --root-mode upward src --out-dir dist/esm && cp src/index.d.ts dist/esm/index.d.ts",
    "build:watch": "yarn build:js -- --watch",
    "prepublish": "yarn build",
    "storybook": "start-storybook -p 6006",
    "test": "tsc --noEmit --project ./tsconfig.json && jest",
    "test:watch": "yarn test -- --watchAll"
  },
  "dependencies": {
    "@pluralsight/ps-design-system-core": "^6.4.3",
    "@pluralsight/ps-design-system-filter-react-props": "^1.1.19",
    "@pluralsight/ps-design-system-icon": "^18.2.4",
    "prop-types": "^15.7.2",
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^4.0.0",
    "@pluralsight/ps-design-system-theme": "^4.0.0",
    "glamor": "^2.20.40",
    "react": "^16.8.6"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-build": "^1.11.17",
    "@pluralsight/ps-design-system-storybook-preset": "^0.1.3",
    "@pluralsight/ps-design-system-theme": "^4.0.14"
  }
}
