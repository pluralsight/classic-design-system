{
  "name": "@pluralsight/ps-design-system-errors",
  "version": "13.0.2",
  "description": "Design system components for errors",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "author": "jaketrent",
  "keywords": [],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "src/*",
    "dist/*",
    "!src/*/__stories__/*",
    "!src/*/__specs__/*"
  ],
  "scripts": {
    "build": "run-s build:svg build:esm build:cjs build:types build:css",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --target es5 --outDir dist/cjs",
    "build:css": "postcss-compile",
    "build:esm": "tsc --project tsconfig.build.json --module es2015 --target es5 --outDir dist/esm",
    "build:svg": "run-s convert:svg removeindex:svg",
    "build:types": "tsc --project tsconfig.build.json --module es2015 --target es5 --outDir dist/esm",
    "build:watch": "yarn build:esm --watch",
    "convert:svg": "svgr --typescript --filename-case kebab --ext \"dist.tsx\" -d src/react/illustrations src/svg",
    "removeindex:svg": "rimraf src/react/illustrations/index.dist.tsx",
    "storybook": "start-storybook -p 6006",
    "test": "tsc --noEmit --project ./tsconfig.json && jest",
    "test:watch": "yarn test --watchAll"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "style": "dist/esm/css/index.css",
  "types": "dist/esm/index.d.ts",
  "dependencies": {
    "@pluralsight/ps-design-system-button": "^23.0.1",
    "@pluralsight/ps-design-system-core": "^9.0.0",
    "@pluralsight/ps-design-system-icon": "^24.0.1",
    "@pluralsight/ps-design-system-text": "^20.1.17",
    "@pluralsight/ps-design-system-util": "^9.3.0",
    "camelize": "^1.0.0"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^6.0.0",
    "@pluralsight/ps-design-system-theme": "^8.1.4",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-build": "^3.2.2",
    "@pluralsight/ps-design-system-normalize": "^6.0.0",
    "@pluralsight/ps-design-system-storybook-preset": "^0.7.5",
    "@pluralsight/ps-design-system-theme": "^8.1.15"
  },
  "gitHead": "0c5576456d80ae8d6dfb82da74320f3e8266c35a"
}
