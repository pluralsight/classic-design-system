{
  "name": "@pluralsight/ps-design-system-errors",
  "version": "9.0.4",
  "description": "Design system components for errors",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "author": "jaketrent",
  "keywords": [],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "build": "run-s build:svg build:esm build:cjs build:css",
    "build:cjs": "babel --extensions \".js,.ts,.tsx\" --root-mode upward src --out-dir dist/cjs",
    "build:css": "build-css --useGlamor -i dist/cjs/css/index.js",
    "build:esm": "cross-env ESM=true babel --extensions \".js,.ts,.tsx\" --root-mode upward src --out-dir dist/esm",
    "build:svg": "svgr --typescript --filename-case kebab --ext \"dist.tsx\" -d src/react/illustrations src/svg",
    "build:watch": "yarn build:cjs --watch",
    "storybook": "start-storybook -p 6006",
    "test": "tsc --noEmit --project ./tsconfig.json && jest",
    "test:watch": "yarn test --watchAll"
  },
  "style": "dist/index.css",
  "types": "dist/esm/index.d.ts",
  "dependencies": {
    "@pluralsight/ps-design-system-button": "^19.0.17",
    "@pluralsight/ps-design-system-core": "^6.6.3",
    "@pluralsight/ps-design-system-icon": "^19.0.16",
    "@pluralsight/ps-design-system-text": "^17.0.5",
    "@pluralsight/ps-design-system-util": "^6.0.8",
    "camelize": "^1.0.0"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^4.0.0",
    "@pluralsight/ps-design-system-theme": "^6.0.0",
    "glamor": "^2.20.40",
    "react": "^16.8.6"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-build": "^2.0.2",
    "@pluralsight/ps-design-system-normalize": "^4.2.3",
    "@pluralsight/ps-design-system-storybook-preset": "^0.2.18",
    "@pluralsight/ps-design-system-theme": "^6.0.13"
  }
}
