{
  "name": "@pluralsight/ps-design-system-icon",
  "version": "18.2.3",
  "description": "Design System component for icon ui",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "author": "jaketrent",
  "keywords": [],
  "bin": {
    "psds-icon": "bin/icon"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "prebuild": "yarn build:svg",
    "build": "run-s build:esm build:cjs build:css copy:svg",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --target es5 --outDir dist/cjs",
    "build:css": "build-css --useGlamor -i dist/cjs/css/index.js",
    "build:esm": "tsc --project tsconfig.build.json --module es2015 --target es5 --outDir dist/esm",
    "prebuild:svg": "yarn clean:svg",
    "build:svg": "node bin/icon -s src/svg -d src/react/icons core",
    "build:watch": "yarn build:js -- --watch",
    "clean:svg": "node bin/icon -s src/svg --clean",
    "copy:svg": "node cli/copy-svgs.js",
    "prepublish": "yarn build",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:watch": "yarn test -- --watchAll"
  },
  "sideEffects": false,
  "dependencies": {
    "@pluralsight/ps-design-system-core": "^6.4.2",
    "@pluralsight/ps-design-system-filter-react-props": "^1.1.18",
    "@pluralsight/ps-design-system-util": "^5.2.0",
    "arg": "^4.1.1",
    "fast-glob": "^3.1.0",
    "prop-types": "^15.7.2",
    "svgo": "^1.3.2"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^4.0.0",
    "glamor": "^2.20.40",
    "react": "^16.8.6"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-build": "^1.11.16",
    "@pluralsight/ps-design-system-storybook-preset": "^0.1.2",
    "ncp": "^2.0.0"
  }
}
