{
  "name": "@pluralsight/ps-design-system-table",
  "version": "15.1.19",
  "description": "Table UI Component for the Pluralsight Design System",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "src/*",
    "dist/*",
    "!src/*/__stories__/*",
    "!src/*/__specs__/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "run-s build:esm build:cjs build:css",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --target es5 --outDir dist/cjs",
    "build:css": "build-css --useGlamor -i dist/cjs/css/index.js",
    "build:esm": "tsc --project tsconfig.build.json --module es2015 --target es5 --outDir dist/esm",
    "build:watch": "yarn build:esm -- --watch",
    "storybook": "start-storybook -p 6006",
    "test": "tsc --noEmit --project ./tsconfig.json && jest",
    "test:watch": "yarn test -- --watchAll"
  },
  "sideEffects": false,
  "style": "dist/index.css",
  "types": "dist/esm/index.d.ts",
  "dependencies": {
    "@pluralsight/ps-design-system-collapsible": "^5.1.6",
    "@pluralsight/ps-design-system-core": "^8.2.0",
    "@pluralsight/ps-design-system-icon": "^23.1.12",
    "@pluralsight/ps-design-system-util": "^9.2.6",
    "invariant": "^2.2.4"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^5.1.2",
    "@pluralsight/ps-design-system-theme": "^8.1.4",
    "glamor": "^2.x.x",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-avatar": "^10.0.0",
    "@pluralsight/ps-design-system-build": "^3.2.0",
    "@pluralsight/ps-design-system-button": "^22.1.12",
    "@pluralsight/ps-design-system-checkbox": "^9.1.10",
    "@pluralsight/ps-design-system-dropdown": "^12.1.16",
    "@pluralsight/ps-design-system-emptystate": "^13.1.14",
    "@pluralsight/ps-design-system-layout": "^11.1.13",
    "@pluralsight/ps-design-system-screenreaderonly": "^4.1.10",
    "@pluralsight/ps-design-system-searchinput": "^9.1.12",
    "@pluralsight/ps-design-system-storybook-preset": "^0.7.0",
    "@pluralsight/ps-design-system-text": "^20.1.11",
    "@types/faker": "^5.1.4",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-table": "^7.0.25",
    "faker": "^5.1.0",
    "react-beautiful-dnd": "^13.0.0",
    "react-table": "^7.6.2"
  },
  "gitHead": "287df3d6daa2044fe511c370ad581bfa529c67db"
}
