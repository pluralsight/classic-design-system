{
  "name": "@pluralsight/ps-design-system-table",
  "version": "16.0.0",
  "description": "Table UI Component for the Pluralsight Design System",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "src/*",
    "dist/*",
    "!src/*/__stories__/*",
    "!src/*/__specs__/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "run-s build:esm build:cjs build:css",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --target es5 --outDir dist/cjs",
    "build:css": "postcss-compile",
    "build:esm": "tsc --project tsconfig.build.json --module es2015 --target es5 --outDir dist/esm",
    "build:watch": "yarn build:esm -- --watch",
    "storybook": "start-storybook -p 6006",
    "test": "tsc --noEmit --project ./tsconfig.json && jest",
    "test:watch": "yarn test -- --watchAll"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "style": "dist/esm/css/index.css",
  "types": "dist/esm/index.d.ts",
  "dependencies": {
    "@pluralsight/ps-design-system-collapsible": "^5.1.8",
    "@pluralsight/ps-design-system-core": "^9.0.0",
    "@pluralsight/ps-design-system-icon": "^24.0.0",
    "@pluralsight/ps-design-system-util": "^9.3.0",
    "invariant": "^2.2.4"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^5.1.2",
    "@pluralsight/ps-design-system-theme": "^8.1.4",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-avatar": "^11.0.0",
    "@pluralsight/ps-design-system-build": "^3.2.2",
    "@pluralsight/ps-design-system-button": "^23.0.0",
    "@pluralsight/ps-design-system-checkbox": "^10.0.0",
    "@pluralsight/ps-design-system-dropdown": "^13.0.0",
    "@pluralsight/ps-design-system-emptystate": "^14.0.0",
    "@pluralsight/ps-design-system-layout": "^12.0.0",
    "@pluralsight/ps-design-system-screenreaderonly": "^5.0.0",
    "@pluralsight/ps-design-system-searchinput": "^10.0.0",
    "@pluralsight/ps-design-system-storybook-preset": "^0.7.4",
    "@pluralsight/ps-design-system-text": "^20.1.16",
    "@types/faker": "^5.1.4",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-table": "^7.0.25",
    "faker": "^5.1.0",
    "react-beautiful-dnd": "^13.0.0",
    "react-table": "^7.6.2"
  },
  "gitHead": "0c5576456d80ae8d6dfb82da74320f3e8266c35a"
}
