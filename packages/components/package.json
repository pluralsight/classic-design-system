{
  "name": "@pluralsight/ps-design-system-components",
  "version": "0.0.1",
  "description": "Pluralsight design system components",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "keywords": [],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "src/*",
    "dist/*",
    "!src/*/__stories__/*",
    "!src/*/__specs__/*"
  ],
  "scripts": {
    "build": "run-s build:images build:cjs build:esm",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --target es5 --outDir dist/cjs",
    "build:normalize": "postcss css/index.css --dir dist",
    "build:esm": "tsc --project tsconfig.build.json --module es2015 --target es5 --outDir dist/esm",
    "build:images": "node scripts",
    "build:watch": "yarn build:esm -- --watch",
    "lint": "eslint . --cache --quiet --ext .js,.jsx,.ts,.tsx ",
    "storybook": "start-storybook -p 6006",
    "test": "tsc --noEmit --project ./tsconfig.json && jest",
    "test:watch": "yarn test --watchAll"
  },
  "sideEffects": false,
  "style": "dist/index.css",
  "types": "dist/esm/index.d.ts",
  "dependencies": {
    "arrow-keys-react": "^1.0.6",
    "body-scroll-lock": "^3.0.3",
    "date-fns": "^2.16.1",
    "dayzed": "^3.2.1",
    "downshift": "^6.1.2",
    "element-closest": "^3.0.2",
    "exenv": "^1.2.2",
    "focus-within": "^3.0.2",
    "hoist-non-react-statics": "^3.3.0",
    "invariant": "^2.2.4",
    "tiny-hashes": "^1.0.1",
    "react-cookie": "^4.0.3",
    "resize-observer-polyfill": "^1.5.1",
    "shave": "^2.5.6",
    "shiitake": "^3.0.2"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^4.0.0",
    "glamor": "^2.20.40",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-actionmenu": "^17.1.3",
    "@pluralsight/ps-design-system-dropdown": "^12.1.3",
    "@pluralsight/ps-design-system-build": "^3.1.0",
    "@pluralsight/ps-design-system-storybook-preset": "^0.6.1",
    "@types/faker": "^5.1.4",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-table": "^7.0.25",
    "cssnano": "^4.1.10",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "faker": "^5.5.3",
    "react-beautiful-dnd": "^13.0.0",
    "react-table": "^7.6.2"
  }
}