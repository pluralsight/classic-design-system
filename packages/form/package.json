{
  "name": "@pluralsight/ps-design-system-form",
  "version": "12.1.11",
  "description": "Design system components for form layout",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "author": "jaketrent",
  "keywords": [
    "pluralsight",
    "design system",
    "form ui"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "src/*",
    "dist/*",
    "!src/*/__stories__/*",
    "!src/*/__specs__/*"
  ],
  "scripts": {
    "build": "run-s build:esm build:cjs build:css",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --target es5 --outDir dist/cjs",
    "build:css": "build-css --useGlamor -i dist/cjs/css/index.js",
    "build:esm": "tsc --project tsconfig.build.json --module es2015 --target es5 --outDir dist/esm",
    "build:watch": "yarn build:esm --watch",
    "storybook": "start-storybook -p 6006",
    "test": "tsc --noEmit --project ./tsconfig.json && jest",
    "test:watch": "yarn test --watchAll"
  },
  "sideEffects": false,
  "style": "dist/index.css",
  "types": "dist/esm/index.d.ts",
  "dependencies": {
    "@pluralsight/ps-design-system-core": "^8.1.2",
    "@pluralsight/ps-design-system-util": "^9.2.1"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^5.0.0",
    "@pluralsight/ps-design-system-theme": "^7.0.0",
    "glamor": "^2.20.40",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-actionmenu": "^17.1.6",
    "@pluralsight/ps-design-system-build": "^3.1.1",
    "@pluralsight/ps-design-system-button": "^22.1.6",
    "@pluralsight/ps-design-system-checkbox": "^9.1.4",
    "@pluralsight/ps-design-system-datepicker": "^15.1.6",
    "@pluralsight/ps-design-system-dropdown": "^12.1.10",
    "@pluralsight/ps-design-system-radio": "^10.1.6",
    "@pluralsight/ps-design-system-storybook-preset": "^0.6.4",
    "@pluralsight/ps-design-system-switch": "^9.1.4",
    "@pluralsight/ps-design-system-tag": "^10.1.6",
    "@pluralsight/ps-design-system-text": "^20.1.5",
    "@pluralsight/ps-design-system-textarea": "^9.1.6",
    "@pluralsight/ps-design-system-textinput": "^11.1.6",
    "@pluralsight/ps-design-system-theme": "^8.1.4"
  }
}
