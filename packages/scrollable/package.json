{
  "name": "@pluralsight/ps-design-system-scrollable",
  "version": "1.1.10",
  "description": "Scrollable UI Component for the Pluralsight Design System",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "run-s build:js build:cjs build:css",
    "build:cjs": "babel --root-mode upward src --out-dir dist/cjs",
    "build:css": "build-css --useGlamor -i dist/cjs/css/index.js",
    "build:js": "cross-env ESM=true babel --root-mode upward src --out-dir dist/esm",
    "build:watch": "yarn build:js -- --watch",
    "prepublish": "yarn build",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:watch": "yarn test -- --watchAll"
  },
  "dependencies": {
    "@pluralsight/ps-design-system-core": "^6.4.2",
    "@pluralsight/ps-design-system-filter-react-props": "^1.1.18",
    "@pluralsight/ps-design-system-util": "^5.2.0",
    "exenv": "^1.2.2",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^3.1.4",
    "glamor": "^2.x.x",
    "react": ">=16.8.6 < 17.0.0"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-build": "^1.11.16",
    "@pluralsight/ps-design-system-storybook-preset": "^0.1.2",
    "@pluralsight/ps-design-system-text": "^16.0.23"
  }
}
