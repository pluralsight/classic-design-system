{
  "name": "@pluralsight/ps-design-system-theme",
  "version": "8.1.4",
  "description": "Design System component for theming",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "author": "jaketrent",
  "keywords": [],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "src/*",
    "dist/*",
    "!src/*/__stories__/*",
    "!src/*/__specs__/*"
  ],
  "scripts": {
    "build": "run-s build:esm build:cjs",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --target es5 --outDir dist/cjs",
    "build:watch": "yarn build:esm --watch",
    "build:esm": "tsc --project tsconfig.build.json --module es2015 --target es5 --outDir dist/esm",
    "test": "jest",
    "test:watch": "yarn test --watchAll"
  },
  "sideEffects": false,
  "types": "dist/esm/index.d.ts",
  "dependencies": {
    "@pluralsight/ps-design-system-util": "^9.2.1",
    "hoist-non-react-statics": "^3.3.0"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^5.1.2",
    "glamor": "^2.20.40",
    "react": "^17.0.1"
  }
}
