{
  "name": "@pluralsight/ps-design-system-note",
  "version": "7.1.7",
  "description": "Note UI Component for the Pluralsight Design System",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "run-s build:js build:cjs build:css",
    "build:cjs": "babel --root-mode upward src --out-dir dist/cjs",
    "build:css": "build-css --useGlamor -i dist/cjs/css/index.js",
    "build:js": "cross-env ESM=true babel --root-mode upward src --out-dir dist/esm",
    "build:watch": "yarn build:js -- --watch",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:watch": "yarn test -- --watchAll"
  },
  "gitHead": "7418883d96a76c59a99f86c2b16516ec752bf913",
  "dependencies": {
    "@pluralsight/ps-design-system-avatar": "^6.1.7",
    "@pluralsight/ps-design-system-core": "^6.5.1",
    "@pluralsight/ps-design-system-filter-react-props": "^1.2.1",
    "@pluralsight/ps-design-system-prop-types": "^2.1.1"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "^4.0.0",
    "@pluralsight/ps-design-system-theme": "^6.0.0",
    "glamor": "^2.x.x",
    "react": "^16.8.6"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-actionmenu": "^15.3.4",
    "@pluralsight/ps-design-system-build": "^1.12.1",
    "@pluralsight/ps-design-system-icon": "^19.0.5",
    "@pluralsight/ps-design-system-link": "^10.3.7",
    "@pluralsight/ps-design-system-position": "^5.0.4",
    "@pluralsight/ps-design-system-storybook-preset": "^0.2.7",
    "@pluralsight/ps-design-system-text": "^16.1.7",
    "@pluralsight/ps-design-system-theme": "^6.0.3"
  }
}
