{
  "name": "@pluralsight/ps-design-system-focusmanager",
  "version": "1.1.7",
  "description": "FocusManager UI Component for the Pluralsight Design System",
  "license": "Apache-2.0",
  "repository": "pluralsight/design-system",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "build": "run-s build:js build:css",
    "build:css": "build-css",
    "build:js": "babel src --out-dir dist --ignore spec.js --copy-files",
    "build:watch": "npm run build:js -- --watch",
    "prepublish": "npm run build",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:updateSnapshot": "npm run test -- --updateSnapshot",
    "test:watch": "npm run test -- --watchAll"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@pluralsight/ps-design-system-normalize": "*",
    "glamor": "^2.x.x",
    "react": ">=0.15.0 < 17.0.0"
  },
  "devDependencies": {
    "@pluralsight/ps-design-system-storybook-addon-center": "file:../storybook-addon-center",
    "@pluralsight/ps-design-system-storybook-addon-theme": "file:../storybook-addon-theme",
    "@pluralsight/ps-design-system-text": "file:../text"
  }
}
