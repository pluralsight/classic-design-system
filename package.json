{
  "name": "design-system",
  "version": "1.0.0",
  "private": true,
  "description": "Pluralsight design system",
  "main": "packages/site/index.js",
  "engines": {
    "node": ">= 7.9",
    "npm": ">= 4.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "precommit": "lint-staged",
    "publish": "lerna publish --conventional-commits --force-publish=*",
    "publish:beta": "npm run publish -- --npm-tag=beta",
    "site": "cd packages/site && npm run site",
    "start": "npm run site",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "test:updateSnapshot": "npm run test -- --updateSnapshot"
  },
  "keywords": [
    "pluralsight",
    "design system",
    "pattern library"
  ],
  "author": "jaketrent",
  "license": "Apache-2.0",
  "dependencies": {
    "glamor": "^2.20.39",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "babel-jest": "^20.0.1",
    "babel-plugin-preval": "^1.4.2",
    "babel-plugin-syntax-export-extensions": "^6.13.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "camelize": "^1.0.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.0",
    "lerna": "^2.0.0-rc.4",
    "lint-staged": "^4.0.2",
    "prettier": "^1.4.0",
    "react-test-renderer": "^15.5.4"
  },
  "lint-staged": {
    "packages/*.js": [
      "node_modules/.bin/prettier --single-quote --no-semi --write",
      "git add"
    ],
    "packages/**/*.css": [
      "node_modules/.bin/prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy",
      "\\.svg$": "<rootDir>/test/__mocks__/svg-mock.js"
    },
    "testRegex": "packages/.*(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$",
    "transformIgnorePatterns": [
      "<rootDir>.*(node_modules)(?!.*@pluralsight.*).*$"
    ]
  },
  "browserslist": "last 4 versions"
}
