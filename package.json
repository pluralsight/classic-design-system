{
  "name": "design-system",
  "version": "1.0.0",
  "description": "Pluralsight design system",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">= 7.9",
    "npm": ">= 4.2"
  },
  "author": "jaketrent",
  "main": "packages/site/index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "commitmsg": "commitlint -e",
    "component:create": "node ./scripts/create-component/index.js",
    "danger": "danger",
    "lint": "eslint .",
    "lint:no-fail": "eslint .; exit 0",
    "octopus:deploy": "octopus-deploy-create-release-and-deploy",
    "octopus:publish": "gulp octopus-publish",
    "publish": "lerna publish --conventional-commits --message \"chore: publish\"",
    "publish:beta": "npm run publish -- --npm-tag=beta",
    "site": "cd packages/site && npm start",
    "start": "npm run site",
    "test": "jest"
  },
  "lint-staged": {
    "ignore": [
      "scripts/create-component/package-template/**/*",
      "examples/**/*"
    ],
    "linters": {
      "**/*.css": [
        "prettier-eslint --write",
        "git add"
      ],
      "**/*.js": [
        "prettier-eslint --write",
        "eslint",
        "git add"
      ],
      "package.json": [
        "format-package -w",
        "git add"
      ]
    }
  },
  "browserslist": "last 4 versions",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "pluralsight",
    "design system",
    "pattern library"
  ],
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "glamor": "^2.20.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^4.2.1",
    "@commitlint/config-angular": "^3.1.1",
    "@commitlint/config-lerna-scopes": "^7.2.1",
    "@octopusdeploy/gulp-octo": "0.0.10",
    "babel-jest": "^20.0.1",
    "babel-plugin-glamorous-displayname": "^1.1.3",
    "babel-plugin-syntax-export-extensions": "^6.13.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "camelize": "^1.0.0",
    "copy-template-dir": "^1.4.0",
    "danger": "^6.1.12",
    "danger-plugin-toolbox": "^1.4.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.25.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "format-package": "^4.5.0",
    "gulp": "^3.9.1",
    "gulp-bump": "^3.1.0",
    "husky": "^0.15.0-rc.13",
    "inquirer": "^6.2.0",
    "jest": "^23.6.0",
    "jest-dom": "^3.0.0",
    "jest-watch-typeahead": "^0.2.0",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "octopus-deploy": "^4.0.0",
    "prettier": "^1.7.4",
    "prettier-eslint-cli": "^4.7.1",
    "raf": "^3.4.0",
    "react-testing-library": "^5.3.2",
    "webpack": "^4.0.0",
    "yargs": "^11.0.0"
  }
}
