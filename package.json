{
  "name": "design-system",
  "version": "1.0.0",
  "description": "Pluralsight design system",
  "license": "Apache-2.0",
  "private": true,
  "author": "jaketrent",
  "keywords": [
    "pluralsight",
    "design system",
    "pattern library"
  ],
  "main": "packages/site/index.js",
  "workspaces": {
    "nohoist": [],
    "packages": [
      "docs",
      "packages/**"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "del '{,!(node_modules)/}**/dist'",
    "generate": "plop",
    "generate:component": "plop component",
    "lint": "eslint . --quiet",
    "lint:ci": "eslint .",
    "octopus:deploy": "octopus-deploy-create-release-and-deploy",
    "octopus:publish": "gulp octopus-publish",
    "postinstall": "link-parent-bin",
    "publish": "lerna publish --conventional-commits --message \"build: publish\"",
    "publish:beta": "yarn publish -- --npm-tag=beta",
    "site": "yarn workspace @pluralsight/ps-design-system-site start",
    "start": "yarn site",
    "test": "jest",
    "test:ci": "jest --ci --collect-coverage --verbose"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "dependencies": {
    "glamor": "^2.20.40",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-transition-group": "^4.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-export-default-from": "^7.10.1",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.1",
    "@babel/plugin-proposal-json-strings": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "@commitlint/config-lerna-scopes": "^8.2.0",
    "@octopusdeploy/gulp-octo": "0.0.12",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-storyshots": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^5.3.19",
    "@svgr/cli": "^4.3.3",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^9.4.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/vfile-message": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-macros": "^2.6.1",
    "core-js": "^2.6.10",
    "cross-env": "^6.0.3",
    "del": "^5.1.0",
    "del-cli": "^3.0.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "eslint-plugin-standard": "^4.0.1",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "format-package": "^5.2.0",
    "gulp": "^3.9.1",
    "gulp-bump": "^3.1.0",
    "husky": "^4.2.5",
    "import-all.macro": "^2.0.3",
    "jest": "^25.5.4",
    "jest-axe": "^3.4.0",
    "jest-prop-type-error": "^1.1.0",
    "jest-watch-typeahead": "^0.4.0",
    "lerna": "^3.22.0",
    "link-parent-bin": "^1.0.2",
    "lint-staged": "^10.2.6",
    "npm-run-all": "^4.1.5",
    "octopus-deploy": "^6.0.0",
    "plop": "^2.7.1",
    "prettier": "^1.18.2",
    "prettier-eslint-cli": "^5.0.0",
    "raf": "^3.4.1",
    "react-test-renderer": "^16.13.1",
    "require-context.macro": "^1.2.2",
    "ts-loader": "^6.2.2",
    "typescript": "^3.9.3",
    "webpack": "^4.41.2",
    "wsrun": "^5.2.1",
    "yargs": "^14.2.3"
  }
}
