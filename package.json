{
  "name": "design-system",
  "version": "1.0.0",
  "description": "Pluralsight design system",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">= 7.9",
    "npm": ">= 4.2"
  },
  "author": "jaketrent",
  "keywords": [
    "pluralsight",
    "design system",
    "pattern library"
  ],
  "main": "packages/site/index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist && link-parent-bin",
    "clean": "lerna clean",
    "component:create": "node ./scripts/create-component/index.js",
    "lint": "eslint .",
    "lint:no-fail": "eslint .; exit 0",
    "octopus:deploy": "octopus-deploy-create-release-and-deploy",
    "octopus:publish": "gulp octopus-publish",
    "publish": "lerna publish --conventional-commits --message \"build: publish\"",
    "publish:beta": "npm run publish -- --npm-tag=beta",
    "site": "cd packages/site && npm start",
    "start": "npm run site",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "scripts/create-component/package-template/**/*",
      "examples/**/*"
    ],
    "linters": {
      "**/*.css": [
        "prettier-eslint --write",
        "git add"
      ],
      "**/*.js": [
        "prettier-eslint --write",
        "eslint",
        "git add"
      ],
      "package.json": [
        "format-package -w",
        "git add"
      ]
    }
  },
  "dependencies": {
    "babel-eslint": "^10.0.1",
    "core-js": "^2.6.9",
    "glamor": "^2.20.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-transition-group": "^4.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "@commitlint/config-lerna-scopes": "^7.2.1",
    "@octopusdeploy/gulp-octo": "0.0.10",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-storyshots": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@svgr/cli": "^4.0.0",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.5",
    "@testing-library/react-hooks": "^1.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-macros": "^2.6.1",
    "copy-template-dir": "^1.4.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.25.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-plugin-standard": "^4.0.0",
    "format-package": "^4.5.0",
    "gulp": "^3.9.1",
    "gulp-bump": "^3.1.0",
    "husky": "^1.2.1",
    "import-all.macro": "^2.0.3",
    "inquirer": "^6.2.0",
    "jest": "^24.8.0",
    "jest-axe": "^3.1.0",
    "jest-prop-type-error": "^1.1.0",
    "jest-watch-typeahead": "^0.3.1",
    "lerna": "^3.4.3",
    "link-parent-bin": "^1.0.2",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.5",
    "octopus-deploy": "^4.0.0",
    "prettier": "^1.7.4",
    "prettier-eslint-cli": "^4.7.1",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.8.6",
    "require-context.macro": "^1.0.4",
    "webpack": "^4.0.0",
    "yargs": "^11.0.0"
  }
}
