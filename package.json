{
  "name": "design-system",
  "version": "1.0.0",
  "description": "Pluralsight design system",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">= 7.9",
    "npm": ">= 4.2"
  },
  "author": "jaketrent",
  "main": "packages/site/index.js",
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean",
    "component:create": "node ./scripts/create-component/index.js",
    "danger": "danger",
    "lint": "eslint .",
    "lint:no-fail": "eslint .; exit 0",
    "octopus:deploy": "octopus-deploy-create-release-and-deploy",
    "octopus:publish": "gulp octopus-publish",
    "postinstall": "link-parent-bin && npm run build",
    "publish": "lerna publish --conventional-commits --message \"chore: publish\"",
    "publish:beta": "npm run publish -- --npm-tag=beta",
    "site": "cd packages/site && npm start",
    "start": "npm run site",
    "test": "jest"
  },
  "lint-staged": {
    "ignore": [
      "scripts/create-component/package-template/**/*",
      "examples/**/*"
    ],
    "linters": {
      "**/*.css": [
        "prettier-eslint --write",
        "git add"
      ],
      "**/*.js": [
        "prettier-eslint --write",
        "eslint",
        "git add"
      ],
      "package.json": [
        "format-package -w",
        "git add"
      ]
    }
  },
  "browserslist": "last 4 versions",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "pluralsight",
    "design system",
    "pattern library"
  ],
