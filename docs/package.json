{
  "name": "@pluralsight/ps-design-system-docs",
  "version": "0.0.0",
  "description": "Reference site",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": "^11.4.0"
  },
  "scripts": {
    "build": "npm-run-all -s build:gatsby build:server build:assets",
    "build:assets": "copyfiles --up 1 ./src/**/*.{html,json} dist",
    "build:gatsby": "gatsby build",
    "build:server": "tsc --project ./tsconfig.json",
    "dev:gatsby": "gatsby develop",
    "dev:server": " nodemon | bunyan -o short",
    "lint": "tsc --noEmit && eslint . --ext .js,.jsx,.ts,.tsx --quiet",
    "lint:ci": "tsc --noEmit && eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "start": "node ./dist/server/main.js",
    "start:dev": "npm run dev:gatsby"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.16",
    "@mdx-js/react": "^1.6.16",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.14",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "gatsby-plugin-express": "^1.1.6",
    "helmet": "^4.1.0",
    "http-errors": "^1.8.0",
    "newrelic": "^6.13.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "response-time": "^2.3.2",
    "serve-favicon": "^2.5.0",
    "typescript": "^3.9.7",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.7",
    "@types/helmet": "0.0.48",
    "@types/http-errors": "^1.8.0",
    "@types/node": "^14.0.26",
    "@types/response-time": "^2.3.4",
    "@types/serve-favicon": "^2.5.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "copyfiles": "^2.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gatsby": "^2.24.50",
    "gatsby-plugin-mdx": "^1.2.37",
    "gatsby-plugin-remove-trailing-slashes": "^2.3.11",
    "gatsby-plugin-typescript": "^2.4.18",
    "gatsby-source-filesystem": "^2.3.27",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-node": "^9.0.0"
  }
